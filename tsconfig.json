{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"removeComments": true,
		"newLine": "lf",
		"resolveJsonModule": true,
		"lib": ["DOM"],
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*", "types"]
}
